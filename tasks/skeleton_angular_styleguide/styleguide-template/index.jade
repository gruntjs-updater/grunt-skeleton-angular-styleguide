doctype html
head
  meta(charset='utf-8')
  title Styleguide
  meta(name='description', content='')
  meta(name='viewport', content='width=device-width')

  link(rel='stylesheet', href='css/styleguide.css')
  link(rel='stylesheet', href='widgets.css')

  body(ng-app='styleguide')
    base(href=baseFolder)
    div.l-styleguide-container(ng-controller='MainCtrl')
      div.l-styleguide-sidebar-container(ng-include="'layout/sidebar/sidebar.html'")
      div.l-styleguide-main-container(ui-view)


    script(src='bower_components/jquery/dist/jquery.js')
    each depPath in widgetsMainPaths
      script(src='bower_components/#{depPath}')

    script(src='bower_components/ui-router/release/angular-ui-router.js')
    script(src='bower_components/lodash/dist/lodash.js')
    script(src='bower_components/angular-filter/dist/angular-filter.js')
    script(src='main.js')
    script(src='layout/sidebar/sidebar.controller.js')
    script(src='dashboard/dashboard.controller.js')
    script(src='component/component.controller.js')
    script(src='colors/colors.controller.js')
    script(src='typography/typography.controller.js')
    script(src='page/page.controller.js')

    script(src='widgets.js')

    each controller in exampleControllers
      script(src='pages/#{controller}.js')
